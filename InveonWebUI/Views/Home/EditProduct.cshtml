@model InveonWebUI.Models.ProductViewModel

@{
    ViewData["Title"] = "EditProduct";
}

<h1>Ürün Güncelle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control">
            <input type="hidden" asp-for="ProductImageUrl" class="form-control">
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductBarcode" class="control-label"></label>
                <input asp-for="ProductBarcode" class="form-control" required />
                <span asp-validation-for="ProductBarcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescryption" class="control-label"></label>
                <textarea asp-for="ProductDescryption" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductDescryption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" required/>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductUnit" class="control-label"></label>
                <input asp-for="ProductUnit" class="form-control" required/>
                <span asp-validation-for="ProductUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPhoto" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProductPhoto" type="file" class="custom-file-input" id="customFile" lang="tr" required>
                    <label class="custom-file-label" for="ProductImageUrl">Dosya Seç</label>
                </div>
                <span asp-validation-for="ProductPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="EditSave" asp-controller="Home" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ana Sayfa</a>
</div>

